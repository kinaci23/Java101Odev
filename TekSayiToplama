import java.util.Scanner;
public class TekSayiToplama {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        int n;
        int toplam = 0;

        do {
            System.out.print("bir sayÄ± giriniz: ");
            n = scan.nextInt();
            if(n%2==1){
                toplam+=n;
            }


        }while (n>0) ;
        System.out.println("toplam = "+toplam);
    }
}
